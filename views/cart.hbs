  {{!-- ajax script for change product quantity --}}
  <script>
    function changeQuantity(cartid, proId, quantity, count) {
      $.ajax({
        url: '/change-product-quantity',
        data: {
          cartid: cartid,
          product: proId,
          quantity: quantity,
          count: count,
        }, method: 'post',
       success: (response) => {
          if (response.removeProduct) {
            alert('Product removed from the cart')
            location.reload();
          } else {
            location.reload();
          }

        }
      })
    } 
  </script>
  <script>
    function removeProductforcart(cartId) {
      $.ajax({
        url: "/remove-Product-forcart",
        data: {
          cart: cartId,
        },
        method: "post",
        success: (Response) => {
          if (Response) {
            alert('product removed from cart')
            location.reload()
          }
        }
      })
    }
  </script>
